{
  "include": ["./**/*.d.ts", "./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": ["@shopify/oxygen-workers-types"],
    "paths": {
      "~/*": ["app/*"],
      ".hydrogen/*": [".hydrogen/*"],
      "@shopify/hydrogen": ["../../node_modules/@shopify/h2-test-hydrogen"],
      "@shopify/hydrogen-remix": [
        "../../node_modules/@shopify/h2-test-hydrogen-remix"
      ],
      "@remix-run/oxygen": ["../../node_modules/@shopify/h2-test-remix-oxygen"]
    },

    // Remix takes care of building everything in `./app` with `remix build`.
    // Wrangler takes care of building everything in `./worker` with `wrangler start` / `wrangler publish`.
    "noEmit": true
  }
}
