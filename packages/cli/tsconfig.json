{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo"
  }
}
