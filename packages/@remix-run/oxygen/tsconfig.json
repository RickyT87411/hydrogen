{
  "include": ["**/*.ts"],
  "exclude": ["dist", "__tests__", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ES2019"],
    "target": "ES2019",
    "types": ["@shopify/oxygen-workers-types"],

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "rootDir": ".",
    "outDir": "../../build/node_modules/@remix-run/oxygen/dist",

    // Avoid naming conflicts between history and react-router-dom relying on
    // lib.dom.d.ts Window and this being a WebWorker env.
    "skipLibCheck": true
  }
}
